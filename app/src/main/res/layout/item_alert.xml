<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/iv_item_alert_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_article_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="@id/iv_item_alert_icon"
            app:layout_constraintStart_toEndOf="@id/iv_item_alert_icon">
            <TextView
                android:id="@+id/tv_item_alert_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_item_alert_content"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="회원님의 게시물에 댓글을 남겼습니다: 쩌구저쩌구쩌꺼주쭈어쩌구어쩌구저쩌구쩌꺼주쭈어쩌구어쩌구저쩌구쩌꺼주쭈어쩌구"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>