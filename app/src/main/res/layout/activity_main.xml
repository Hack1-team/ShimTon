<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_eventpage_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해커톤 이름"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ib_eventpage_home_bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_eventpage_home_bell"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/tv_eventpage_home_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_eventpage_home_title"
        app:layout_constraintEnd_toStartOf="@id/ib_eventpage_home_add_eventpage"
        android:background="@color/white"/>

    <ImageButton
        android:id="@+id/ib_eventpage_home_add_eventpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_add_eventpage"
        android:scaleType="fitXY"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@id/tv_eventpage_home_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_eventpage_home_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_eventpage_home"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        app:layout_constraintEnd_toEndOf="@id/tv_eventpage_home_title"
        app:layout_constraintTop_toBottomOf="@id/tv_eventpage_home_title"
        app:layout_constraintStart_toStartOf="@id/tv_eventpage_home_title">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                tools:listitem="@layout/item_eventpage_article"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/create_room"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/sv_eventpage_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>