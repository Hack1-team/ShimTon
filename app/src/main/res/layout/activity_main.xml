<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_background_color">
        <TextView
            android:id="@+id/tv_eventpage_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="해커톤명"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="21sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/ib_eventpage_home_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_eventpage_home_bell"
            android:scaleType="fitXY"
            android:layout_marginRight="20dp"
            android:background="@color/home_background_color"
            app:layout_constraintTop_toTopOf="@id/tv_eventpage_home_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_eventpage_home_title"
            app:layout_constraintEnd_toStartOf="@id/ib_eventpage_home_add_eventpage"/>

        <ImageButton
            android:id="@+id/ib_eventpage_home_add_eventpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_add_eventpage"
            android:scaleType="fitXY"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toTopOf="@id/tv_eventpage_home_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_eventpage_home_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/home_background_color"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/sv_eventpage_home"
            android:layout_width="match_parent"
            android:layout_height="580dp"
            app:layout_constraintEnd_toEndOf="@id/tv_eventpage_home_title"
            app:layout_constraintTop_toBottomOf="@id/tv_eventpage_home_title"
            app:layout_constraintStart_toStartOf="@id/tv_eventpage_home_title">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/item_eventpage_article" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/home_background_color"
            android:src="@drawable/create_room_icon"
            app:layout_constraintTop_toBottomOf="@id/sv_eventpage_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>